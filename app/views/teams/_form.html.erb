<%= form_with(model: @team, local: true) do |f| %>
  <%= errors_for(@team) %>

  <div class="form-group col-sm-6">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>



<p></p>

<div class="col-sm-6">
  <div class="card" >
    <div class="card-header">
      Users
    </div>

<div class="card-body">
      <%= link_to "New User",
                new_user_team_path(@team),
                data: { turbo_frame: dom_id(UserTeam.new) },
                class: "btn btn-primary" %>
  <%= turbo_frame_tag UserTeam.new %>

<table class="table table-striped table-hover table-sm">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th colspan="3" scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @team.user_teams.each do |user_team| %>
      <tr>
        <td><%= user_team.user.name %></td>
        <td><%= user_team.user.email %></td>
        <td><%= link_to 'Remove', user_team, data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


</div>
</div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>

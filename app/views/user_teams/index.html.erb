<h1>User Teams</h1>

<table class="table table-striped table-hover table-sm">
  <thead>
    <tr>
      <th colspan="3" scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_teams.each do |user_team| %>
      <tr>
        <td><%= link_to 'Show', user_team %></td>
        <td><%= link_to 'Destroy', user_team, data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render 'shared/pagination' %>
<br>
<%= link_to 'New User Team', new_user_team_path %>
